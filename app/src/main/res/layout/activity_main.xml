<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/Fragment1"
        android:name="com.caplight.finalapp.IndexActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="99" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d6d7d7"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/main_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/address_buttom"
            android:stateListAnimator="@null"
            android:text="Contacts"
            android:textSize="15dp" />

        <Button
            android:id="@+id/shopcar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/find_buttom"
            android:stateListAnimator="@null"
            android:text="Discover"
            android:textSize="15dp" />

        <Button
            android:id="@+id/me_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/settings_buttom"
            android:stateListAnimator="@null"
            android:text="Me"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>